{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./built",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json",
    "index.js"
  ],
  "exclude": [
    "./built/**/*",
    "./dist/**/*",
    "./node_modules"
  ]
}